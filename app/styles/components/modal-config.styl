.container-modal-config
  width 100%
  height 100%
  position fixed
  top 0px
  left 0px
  background rgba(0,0,0,0.8)
  z-index 99999
  .content-modal-config
    background #fff
    position relative
    top 50%
    left 50%
    -ms-transform translate(-50%, -50%)
    -webkit-transform translate(-50%, -50%)
    transform translate(-50%, -50%)
    padding 15px
